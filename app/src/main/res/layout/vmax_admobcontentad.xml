<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="80dp"
    android:background="@drawable/vmax_nativeborder"

    >
    <!--
        android:background="@drawable/vmax_nativeborder"
    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/vmax_iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left" />

        <LinearLayout
            android:id="@+id/title_layout_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:gravity="top|center"
            android:orientation="vertical"
            android:weightSum="1.0">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vmax_tv_title"
                    android:layout_width="208dp"
                    android:layout_height="24dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="1dp"
                    android:textColor="@color/vmax_black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vmax_sponsored"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/vmax_nativebg_ad"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="@string/vmax_advertisment_text"
                        android:textColor="@color/vmax_black"
                        android:textSize="8sp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_weight="0.3"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vmax_tv_desc"
                        android:layout_width="140dp"
                        android:layout_height="38dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="1sp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/vmax_black"
                        android:textSize="10sp" />

                    <RatingBar
                        android:id="@+id/vmax_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:visibility="gone" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/vmax_cta"
                        style="@style/style_vmax_button_infeed"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:lines="2"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:text="Install Now"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</com.google.android.gms.ads.formats.NativeContentAdView>
